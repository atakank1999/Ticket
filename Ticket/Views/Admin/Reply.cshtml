@model Ticket.ViewModels.ReplyWithSelectlist

@{
    ViewBag.Title = "Reply";
}
<div class="container-fluid">
    <div class="row">
        
    </div>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Yanıt Yaz</h2>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.Reply.Text, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Reply.Text, 10, 100, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Reply.Text, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                @Html.DropDownListFor(x=>x.Reply.RepliedTicket.Status,Model.SelectListItems,"Durumunu Seçiniz",new {@class="form-control form-control-lg"})
            </div>
            <div class="form-group col-md-3">
                
                @Html.DropDownListFor(x => x.Reply.RepliedTicket.Priority, Model.SelectListItems, "Önemini Seçiniz",new {@class = "form-control form-control-lg" })
                
            </div>
        </div>

        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Yanıtla" class="btn btn-default"/>
            </div>
        </div>
    </div>
}